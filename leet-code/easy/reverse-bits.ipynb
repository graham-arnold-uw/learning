    "def rev_bits(num, maxbits):\n",
    "    res = 0\n",
    "    \n",
    "    for i in range(maxbits):\n",
    "        res <<= 1\n",
    "        res ^= num&1\n",
    "        #print(res)\n",
    "        num >>= 1\n",
    "    \n",
    "    return res\n",
    "    \n",
    "    "
   ]
